{% extends 'base.html.twig' %}

{% block title %}Actionnaires{% endblock %}

{% block body %}
<div class="text-center my-5">
    <h1>Actionnaires</h1>
</div>
    <table class="table table-responsive my-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomStructure</th>
                <th>Logo</th>
                <th>DateCreation</th>
                <th>DateModification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actionnaire in actionnaires %}
            <tr>
                <td>{{ actionnaire.id }}</td>
                <td>{{ actionnaire.nomStructure }}</td>
                 <td><img class="img-fluid zoom" src="{{asset('upload/'~actionnaire.logo)}}" alt="" width="50%"></td>
                <td>{{ actionnaire.dateCreation ? actionnaire.dateCreation|date('m-d-Y H:i:s') : '' }}</td>
                <td>{{ actionnaire.dateModification ? actionnaire.dateModification|date('m-d-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_actionnaire_show', {'id': actionnaire.id}) }}">Afficher</a>
                    <a href="{{ path('app_actionnaire_edit', {'id': actionnaire.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="text-center my-5">
    <a  class="btn btn-create" href="{{ path('app_actionnaire_new') }}">Cr√©er un nouvel actionnaire</a>
</div>
{% endblock %}
