{% extends 'base.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block body %}
    <h1>Actualité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>DateActualite</th>
                <td>{{ actualite.dateActualite ? actualite.dateActualite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TitreActualite</th>
                <td>{{ actualite.titreActualite }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ actualite.description }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ actualite.imageUrl }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ actualite.dateCreation ? actualite.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModification</th>
                <td>{{ actualite.dateModification ? actualite.dateModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actualite_index') }}">revenir à la liste</a>

    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">Modifier</a>

    {{ include('actualite/_delete_form.html.twig') }}
{% endblock %}
